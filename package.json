    "bech32": "^2.0.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "colorizr": "^3.0.8",
    "dayjs": "^1.11.10",
    "expo": "54.0.21",
    "expo-camera": "~17.0.8",
    "expo-clipboard": "~8.0.7",
    "expo-constants": "~18.0.10",
    "expo-device": "~8.0.9",
    "expo-font": "~14.0.9",
    "expo-image-picker": "~17.0.8",
